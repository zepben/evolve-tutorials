[
  {
    "id": "acls-by-length",
    "name": "ACLS Line",
    "type": "line",
    "paint": {
      "line-color": "rgb(66,120,245)",
      "line-width": 7,
      "line-opacity": 0.3
    }
  },
  {
    "id": "acls-name-length",
    "name": "ACLS Label",
    "type": "symbol",
    "layout": {
      "symbol-placement": "line",
      "text-field": [
        "format",
        ["get", "name"],
        { "font-scale": 1.2 },
        " - ",
        {},
        ["get", "length"],
        { "font-scale": 0.8 },
        "m",
        { "font-scale": 0.8 }
      ],
      "text-font": ["DIN Offc Pro Medium", "Arial Unicode MS Bold"],
      "text-size": 15
    },
    "paint": {
      "text-color": "black",
      "text-halo-blur": 10,
      "text-halo-width": 10,
      "text-halo-color": "white"
    }
  }
]